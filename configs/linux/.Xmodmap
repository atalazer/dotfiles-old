! ! Set capslock as Control
! clear lock
! clear control
! keycode 66 = Control_L
! add control = Control_L Control_R

! ! Set Alt_Left as Mode_switch
! keycode 64 = Mode_switch

! Set capslock as Mode_switch
remove Lock = Caps_Lock
keycode 66 = Mode_switch

! Set Mode_switch + h/j/k/l
keysym h = h H Left
keysym j = j J Down
keysym k = k K Up
keysym l = l L Right

! Set Shift_R and Shift_L for Caps_Lock
keysym Shift_R = Shift_R Caps_Lock Shift_R
keysym Shift_L = Shift_L Caps_Lock Shift_L
