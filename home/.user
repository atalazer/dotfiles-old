#!/bin/sh

[ -f ~/.user.keys ] && source ~/.user.keys

## Apps
export TERMINAL="kitty"
export BROWSER="firefox"
export FILEMAN="thunar"

export EDITOR="nvim"
export VISUAL="nvim"

# CMD
export PERMISSION="sudo"
export SHUTDOWN_CMD="poweroff"
export REBOOT_CMD="reboot"
export SUSPEND_CMD="suspend"
export LOCK_CMD=""

# Dirs
export APP_DIR="$HOME/Applications"
export BIN_DIR="$HOME/.local/bin"
export BACKUP_DIR="$HOME/Backups"
export NOTE_DIR="$HOME/Documents/Notes"
export SCHOOL_DIR="$HOME/School"
export WORK_DIR="$HOME/Work"
export PROGRAMMING_DIR="${WORK_DIR:-$HOME/Work}/Programming"
export REPO_DIR="${WORK_DIR:-$HOME/Work}/Repos"

export BLOG="${WORK_DIR:-$HOME/Work}/Blog"
export DOTS="$HOME/.dotfiles"

# Misc
export WAL_BACKEND=colorthief       # wal colorthief haishoku

